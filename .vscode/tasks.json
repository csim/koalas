{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "./src/",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      },
      "isBackground": true
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "--verbosity",
        "quiet"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Koalas.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "clear": true
      },
      "isBackground": true
    },
    {
      "label": "watch-test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--verbosity",
        "quiet"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Koalas.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "clear": true
      },
      "isBackground": true
    }
  ]
}