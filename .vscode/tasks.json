{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "format",
        "build-only"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
    },
    {
      "group": "build",
      "label": "format",
      "command": "csharpier",
      "type": "process",
      "args": [
        "format",
        "./src/"
      ],
      "problemMatcher": [],
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "group": "build",
      "label": "build-only",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "./src/",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "--verbosity",
        "quiet"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Koalas.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "test-watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--verbosity",
        "quiet"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Koalas.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true
    }
  ]
}